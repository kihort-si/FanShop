<UserControl x:Class="FanShop.View.EmployeeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:FanShop.View"
             xmlns:windows="clr-namespace:FanShop.Windows"
             mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0" Background="#F2F9FF" Padding="15">
            <TextBlock Text="Список сотрудников" FontSize="16" FontWeight="SemiBold"
                       Foreground="#333333" HorizontalAlignment="Center"/>
        </Border>

        <ListBox Grid.Row="1" ItemsSource="{Binding Employees}"
                 SelectedItem="{Binding SelectedEmployee}"
                 Margin="15" BorderThickness="1" BorderBrush="#E0E0E0">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border Background="#F8F9FA" BorderBrush="#E9ECEF"
                            BorderThickness="1" CornerRadius="5"
                            Padding="15,10" Margin="0,2">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" FontWeight="Bold" FontSize="15">
                                <Run Text="{Binding Surname}"/> 
                                <Run Text="{Binding FirstName}"/> 
                                <Run Text="{Binding LastName}"/>
                            </TextBlock>

                            <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal" Margin="0,6,0,0">
                                <TextBlock Text="{Binding DateOfBirth, StringFormat='Дата рождения: {0:dd.MM.yyyy}'}"
                                           FontSize="12" Foreground="#666666"/>
                                
                                <TextBlock Text=" | " FontSize="12" Foreground="#999999"
                                           Visibility="{Binding PlaceOfBirth, Converter={x:Static local:StringToVisibilityConverter.Instance}}"/>
                                
                                <TextBlock Text="{Binding PlaceOfBirth, StringFormat='Место рождения: {0}'}"
                                           FontSize="12" Foreground="#666666"
                                           Visibility="{Binding PlaceOfBirth, Converter={x:Static local:StringToVisibilityConverter.Instance}}"/>
                            </StackPanel>

                            <Border Grid.RowSpan="2" Grid.Column="1" Background="#E3F2FD"
                                    CornerRadius="4" Padding="8,4" VerticalAlignment="Center">
                                <TextBlock Text="Сотрудник" Foreground="#0077B5"
                                           FontWeight="Medium" FontSize="12"/>
                            </Border>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    <Setter Property="Padding" Value="5"/>
                    <Setter Property="Margin" Value="0,2"/>
                    <Setter Property="Background" Value="Transparent"/>
                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="#E3F2FD"/>
                            <Setter Property="BorderThickness" Value="0"/>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#F0F7FF"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </ListBox.ItemContainerStyle>
        </ListBox>

        <Border Grid.Row="2" Background="#F5F5F5" CornerRadius="0,0,8,8" Padding="10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Добавить" Width="100" Height="36"
                        Background="#009EE1" Foreground="White" Margin="6,0"
                        BorderThickness="0" Cursor="Hand"
                        Command="{Binding AddEmployeeCommand}">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    CornerRadius="4" Padding="12,6">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Opacity" Value="0.9"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                
                <Button Content="Изменить" Width="100" Height="36"
                        Background="#174D7B" Foreground="White" Margin="6,0"
                        BorderThickness="0" Cursor="Hand"
                        Command="{Binding EditEmployeeCommand}"
                        IsEnabled="{Binding CanEditEmployee}">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    CornerRadius="4" Padding="12,6">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Opacity" Value="0.9"/>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="Opacity" Value="0.5"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                
                <Button Content="Удалить" Width="100" Height="36"
                        Background="#EB0004" Foreground="White" Margin="6,0"
                        BorderThickness="0" Cursor="Hand"
                        Command="{Binding RemoveEmployeeCommand}"
                        IsEnabled="{Binding CanEditEmployee}">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    CornerRadius="4" Padding="12,6">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Opacity" Value="0.9"/>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="Opacity" Value="0.5"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                
                <Button Content="Закрыть" Width="100" Height="36"
                        Background="#666666" Foreground="White" Margin="6,0"
                        BorderThickness="0" Cursor="Hand"
                        Command="{Binding CloseCommand}">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    CornerRadius="4" Padding="12,6">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Opacity" Value="0.9"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
