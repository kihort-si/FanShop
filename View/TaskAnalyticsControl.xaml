<UserControl x:Class="FanShop.View.TaskAnalyticsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:FanShop.View"
             xmlns:wpf="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
             mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#F2F9FF" Padding="15">
            <TextBlock Text="Аналитика рабочего времени" 
                       FontSize="18" FontWeight="SemiBold" 
                       Foreground="#333333" HorizontalAlignment="Center"/>
        </Border>

        <Border Grid.Row="1" Padding="15" Background="#FAFAFA">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" Text="Период с:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <DatePicker Grid.Column="1" SelectedDate="{Binding StartDate}" Width="130" Margin="0,0,15,0"
                            BorderThickness="0" Background="Transparent" FontSize="12" VerticalAlignment="Center">
                </DatePicker>
                
                <TextBlock Grid.Column="2" Text="по:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <DatePicker Grid.Column="3" SelectedDate="{Binding EndDate}" Width="130" Margin="0,0,15,0"
                            BorderThickness="0" Background="Transparent" FontSize="12" VerticalAlignment="Center">
                </DatePicker>
                
                <Button Grid.Column="5" Content="Обновить" Height="32" Width="100"
                        Background="#009EE1" Foreground="White" BorderThickness="0"
                        Command="{Binding UpdateAnalyticsCommand}">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" CornerRadius="4" Padding="12,6">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
        </Border>

        <ScrollViewer Grid.Row="2" Margin="15" VerticalScrollBarVisibility="Auto">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Background="#F8F9FA" BorderBrush="#E0E0E0" 
                        BorderThickness="1" CornerRadius="8" Padding="15" Margin="0,0,0,20">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0" Text="Основная статистика" 
                                   FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
                                   
                        <ItemsControl Grid.Row="1" ItemsSource="{Binding StatisticItems}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="200"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="{Binding Label}" 
                                                   FontWeight="Medium"/>
                                        <TextBlock Grid.Column="1" Text="{Binding Value}"/>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Grid>
                </Border>

                <Border Grid.Row="1" Background="#F8F9FA" BorderBrush="#E0E0E0" 
                        BorderThickness="1" CornerRadius="8" Padding="15" Margin="0,0,0,20">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="300"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0" Text="Распределение времени по категориям" 
                                   FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
                                   
                        <wpf:PieChart Grid.Row="1" 
                                     Series="{Binding CategorySeries}" 
                                     LegendPosition="Right"/>
                    </Grid>
                </Border>

                <Border Grid.Row="2" Background="#F8F9FA" BorderBrush="#E0E0E0" 
                        BorderThickness="1" CornerRadius="8" Padding="15" Margin="0,0,0,20">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="300"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0" Text="Распределение времени по дням недели" 
                                   FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
                                   
                        <wpf:CartesianChart Grid.Row="1" 
                                         Series="{Binding DayOfWeekSeries}"
                                         XAxes="{Binding DayOfWeekXAxes}"/>
                    </Grid>
                </Border>

                <Border Grid.Row="3" Background="#F8F9FA" BorderBrush="#E0E0E0" 
                        BorderThickness="1" CornerRadius="8" Padding="15" Margin="0,0,0,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="300"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0" Text="Распределение времени по часам суток" 
                                   FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
                                   
                        <wpf:CartesianChart Grid.Row="1" 
                                         Series="{Binding HourOfDaySeries}"
                                         XAxes="{Binding HourOfDayXAxes}"/>
                    </Grid>
                </Border>
                
                <Border Grid.Row="4" Background="#F8F9FA" BorderBrush="#E0E0E0" 
                        BorderThickness="1" CornerRadius="8" Padding="15" Margin="0,20,0,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0" Text="Анализ прерываний задач" 
                                  FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
                        
                        <Grid Grid.Row="1" Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0" Text="Выберите категорию:" 
                                      VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <ComboBox Grid.Column="1" Style="{StaticResource ModernComboBox}" ItemsSource="{Binding AvailableCategories}"
                                     SelectedItem="{Binding SelectedCategoryForInterruptions}"
                                     DisplayMemberPath="Name" Width="250"
                                     HorizontalAlignment="Left"/>
                        </Grid>
                        
                        <ItemsControl Grid.Row="2" ItemsSource="{Binding Interruptions}" 
                                     Margin="0,10,0,0">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="White" BorderBrush="#E0E0E0" 
                                           BorderThickness="1" CornerRadius="4" 
                                           Margin="0,0,0,8" Padding="10">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="20"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <Rectangle Grid.Column="0" Width="12" Height="12" 
                                                      Fill="{Binding CategoryColor}"/>
                                            
                                            <TextBlock Grid.Column="1" Text="{Binding CategoryName}" 
                                                     FontWeight="Medium" VerticalAlignment="Center"/>
                                            
                                            <TextBlock Grid.Column="2" Text="{Binding Count, StringFormat='Прерываний: {0}'}"
                                                     Margin="0,0,15,0" VerticalAlignment="Center"/>
                                            
                                            <TextBlock Grid.Column="3" 
                                                     Text="{Binding FormattedAverage, StringFormat='Среднее время: {0}'}"
                                                     VerticalAlignment="Center"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Grid>
                </Border>
            </Grid>
        </ScrollViewer>

        <Border Grid.Row="3" Background="#F5F5F5" CornerRadius="0,0,8,8" Padding="10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Экспорт в Excel" Width="120" Height="36"
                        Background="#28A745" Foreground="White" 
                        BorderThickness="0" Cursor="Hand"
                        Command="{Binding ExportToExcelCommand}"
                        Margin="0,0,10,0">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    CornerRadius="4" Padding="12,6">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Opacity" Value="0.9"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                
                <Button Content="Закрыть" Width="120" Height="36"
                        Background="#666666" Foreground="White" 
                        BorderThickness="0" Cursor="Hand"
                        Command="{Binding CloseCommand}">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    CornerRadius="4" Padding="12,6">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Opacity" Value="0.9"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
