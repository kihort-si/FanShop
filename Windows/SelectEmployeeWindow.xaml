<Window x:Class="FanShop.Windows.SelectEmployeeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:FanShop.Windows"
        mc:Ignorable="d"
        Title="Выбор сотрудника" Height="400" Width="300" WindowStartupLocation="CenterScreen" Icon="/icon.ico" ShowInTaskbar="False">
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <ListBox ItemsSource="{Binding Employees}"
                     SelectedItem="{Binding SelectedEmployee}" 
                     MouseDoubleClick="ListBox_MouseDoubleClick"
                     BorderThickness="0"
                     Background="Transparent">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border Background="White" 
                                BorderBrush="LightGray" 
                                BorderThickness="1" 
                                CornerRadius="5" 
                                Margin="5" 
                                Padding="10">
                            <StackPanel>
                                <TextBlock FontWeight="Bold" 
                                           FontSize="14" 
                                           Margin="0,0,0,8">
                                    <Run Text="{Binding FirstName}" />
                                    <Run Text="{Binding Surname}" />
                                </TextBlock>
                                <StackPanel Orientation="Horizontal" 
                                            VerticalAlignment="Center">
                                    <TextBlock Text="Время работы:" 
                                               VerticalAlignment="Center" 
                                               Margin="0,0,10,0"
                                               FontSize="12"
                                               Foreground="Gray"/>
                                    <ComboBox SelectedValue="{Binding SelectedWorkDuration, RelativeSource={RelativeSource AncestorType=Window}, Mode=TwoWay}"
                                              SelectedValuePath="Content"
                                              Width="120" 
                                              SelectionChanged="ComboBox_SelectionChanged"
                                              BorderBrush="LightGray">
                                        <ComboBoxItem Content="Целый день" />
                                        <ComboBoxItem Content="Полдня" />
                                    </ComboBox>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </ScrollViewer>
    </Grid>
</Window>
