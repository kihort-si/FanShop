<Window x:Class="FanShop.Windows.EmployeeWindow"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
            xmlns:local="clr-namespace:FanShop.Windows"
            mc:Ignorable="d"
            Title="Сотрудники" Height="530" Width="700" WindowStyle="None" ResizeMode="NoResize" Background="White" WindowStartupLocation="CenterScreen" Icon="/icon.ico" ShowInTaskbar="False">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
    
            <ListBox ItemsSource="{Binding Employees}"
                     SelectedItem="{Binding SelectedEmployee}" 
                     Margin="10">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <TextBlock FontWeight="Bold" FontSize="14">
                                <Run Text="{Binding Surname}" />
                                <Run Text="{Binding FirstName}" />
                                <Run Text="{Binding LastName}" />
                            </TextBlock>
                            <TextBlock Text="{Binding DateOfBirth, StringFormat='Дата рождения: {0:dd.MM.yyyy}'}"
                                       FontSize="11" Foreground="Gray" Margin="0,2,0,0"/>
                            <TextBlock Text="{Binding PlaceOfBirth, StringFormat='Место рождения: {0}'}" 
                                       FontSize="11" Foreground="Gray" Margin="0,1,0,0"
                                       Visibility="{Binding PlaceOfBirth, Converter={x:Static local:StringToVisibilityConverter.Instance}}"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
    
            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <Button Content="Добавить" Width="80" Height="30" Margin="0,0,10,0"
                        Command="{Binding AddEmployeeCommand}" Background="#009EE1" Foreground="White" BorderThickness="0" />
                <Button Content="Изменить" Width="80" Height="30" Margin="0,0,10,0"
                        Command="{Binding EditEmployeeCommand}" Background="#009EE1" Foreground="White" BorderThickness="0" />
                <Button Content="Удалить" Width="80" Height="30" Margin="0,0,10,0"
                        Command="{Binding RemoveEmployeeCommand}" Background="#EB0004" Foreground="White" BorderThickness="0" />
                <Button Content="Закрыть" Width="80" Height="30"
                        Command="{Binding CloseWindowCommand}" Background="Gray" Foreground="White" BorderThickness="0"/>
            </StackPanel>
    
            <Grid Grid.RowSpan="2" Background="#80000000"
                  Visibility="{Binding IsEditOverlayVisible, Converter={x:Static local:BooleanToVisibilityConverter.Instance}}">
                <Border Background="White" Width="500" Height="510" CornerRadius="10"
                        BorderBrush="#009EE1" BorderThickness="2">
                    <Grid Margin="20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
    
                        <TextBlock Grid.Row="0" Text="{Binding SelectedEmployee, Converter={x:Static local:EmployeeTitleConverter.Instance}}"
                                   FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>
    
                        <StackPanel Grid.Row="1" Margin="0,0,0,10">
                            <TextBlock Text="Фамилия:" FontWeight="Bold" Margin="0,0,0,5"/>
                            <TextBox Text="{Binding Surname, UpdateSourceTrigger=PropertyChanged}"
                                     Height="30" Padding="5" BorderBrush="#009EE1"/>
                        </StackPanel>
    
                        <StackPanel Grid.Row="2" Margin="0,0,0,10">
                            <TextBlock Text="Имя:" FontWeight="Bold" Margin="0,0,0,5"/>
                            <TextBox Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged}"
                                     Height="30" Padding="5" BorderBrush="#009EE1"/>
                        </StackPanel>
    
                        <StackPanel Grid.Row="3" Margin="0,0,0,10">
                            <TextBlock Text="Отчество:" FontWeight="Bold" Margin="0,0,0,5"/>
                            <TextBox Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged}"
                                     Height="30" Padding="5" BorderBrush="#009EE1"/>
                        </StackPanel>
    
                        <StackPanel Grid.Row="4" Margin="0,0,0,10">
                            <TextBlock Text="Дата рождения:" FontWeight="Bold" Margin="0,0,0,5"/>
                            <DatePicker SelectedDate="{Binding DateOfBirthPicker, UpdateSourceTrigger=PropertyChanged}"
                                        Height="30" BorderBrush="#009EE1" Padding="2, 5, 0, 0"/>
                        </StackPanel>
    
                        <StackPanel Grid.Row="5" Margin="0,0,0,10">
                            <TextBlock Text="Место рождения:" FontWeight="Bold" Margin="0,0,0,5"/>
                            <TextBox Text="{Binding PlaceOfBirth, UpdateSourceTrigger=PropertyChanged}"
                                     Height="30" Padding="5" BorderBrush="#009EE1"/>
                        </StackPanel>
    
                        <StackPanel Grid.Row="6" Margin="0,0,0,10">
                            <TextBlock Text="Паспорт:" FontWeight="Bold" Margin="0,0,0,5"/>
                            <TextBox Text="{Binding Passport, UpdateSourceTrigger=PropertyChanged}"
                                     Height="30" Padding="5" BorderBrush="#009EE1"/>
                        </StackPanel>
    
                        <StackPanel Grid.Row="9" Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button Content="Сохранить" Width="100" Height="35" Margin="0,0,10,0"
                                    Command="{Binding SaveEditedEmployeeCommand}"
                                    IsEnabled="{Binding CanSaveEmployee}"
                                    Background="#009EE1" Foreground="White" BorderThickness="0"/>
                            <Button Content="Отмена" Width="100" Height="35"
                                    Command="{Binding CancelEditCommand}"
                                    Background="Gray" Foreground="White" BorderThickness="0"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Window>