<Window x:Class="FanShop.Windows.EmployeeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Сотрудники" Height="400" Width="600" WindowStyle="None" ResizeMode="NoResize" Background="White" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Foreground" Value="Black" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Grid>
                            <ScrollViewer x:Name="PART_ContentHost" />
                            <TextBlock Text="{TemplateBinding Tag}"
                                       Foreground="Gray"
                                       Margin="10,0,0,0"
                                       VerticalAlignment="Center"
                                       IsHitTestVisible="False"
                                       Visibility="{Binding Text.Length,
                                                RelativeSource={RelativeSource TemplatedParent},
                                                Converter={StaticResource ZeroToVisibilityConverter}}" />
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <ListBox ItemsSource="{Binding Employees}"
                 SelectedItem="{Binding SelectedEmployee}" 
                 Margin="10">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock>
                        <Run Text="{Binding FirstName}" />
                        <Run Text="{Binding Surname}" />
                    </TextBlock>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button Content="Добавить" Width="80" Height="30" Margin="0,0,10,0"
                    Command="{Binding AddEmployeeCommand}" Background="#009EE1" Foreground="White" BorderThickness="0" />
            <Button Content="Изменить" Width="80" Height="30" Margin="0,0,10,0"
                    Command="{Binding EditEmployeeCommand}" Background="#009EE1" Foreground="White" BorderThickness="0" />
            <Button Content="Удалить" Width="80" Height="30" Margin="0,0,10,0"
                    Command="{Binding RemoveEmployeeCommand}" Background="#EB0004" Foreground="White" BorderThickness="0" />
            <Button Content="Закрыть" Width="80" Height="30"
                    Command="{Binding CloseWindowCommand}" Background="Gray" Foreground="White" BorderThickness="0"/>
        </StackPanel>
        
        <Border Background="LightGray" Visibility="{Binding IsEditOverlayVisible, Converter={StaticResource BoolToVisibilityConverter}}"
                HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Background="White" Margin="1" Width="300">
                <StackPanel Margin="10">
                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Фамилия:" VerticalAlignment="Center" Foreground="#333"/>
                        <TextBox Grid.Column="1" Text="{Binding Surname, UpdateSourceTrigger=PropertyChanged}" Tag="Введите фамилию" 
                                 Padding="8" Height="32" BorderBrush="#DDD" BorderThickness="1" />
                    </Grid>
                    
                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Имя:" VerticalAlignment="Center" Foreground="#333"/>
                        <TextBox Grid.Column="1" Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged}" Tag="Введите имя" 
                                 Padding="8" Height="32" BorderBrush="#DDD" BorderThickness="1"/>
                    </Grid>
                    
                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Отчество:" VerticalAlignment="Center" Foreground="#333"/>
                        <TextBox Grid.Column="1" Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged}" Tag="Введите отчество" 
                                 Padding="8" Height="32" BorderBrush="#DDD" BorderThickness="1"/>
                    </Grid>
                    
                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Дата рождения:" VerticalAlignment="Center" Foreground="#333"/>
                        <TextBox Grid.Column="1" Text="{Binding DateOfBirth, UpdateSourceTrigger=PropertyChanged}" Tag="дд.мм.гггг" 
                                 Padding="8" Height="32" BorderBrush="#DDD" BorderThickness="1"/>
                    </Grid>
                    
                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Место рождения:" VerticalAlignment="Center" Foreground="#333"/>
                        <TextBox Grid.Column="1" Text="{Binding PlaceOfBirth, UpdateSourceTrigger=PropertyChanged}" Tag="Введите место рождения" 
                                 Padding="8" Height="32" BorderBrush="#DDD" BorderThickness="1"/>
                    </Grid>
                    
                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Паспорт:" VerticalAlignment="Center" Foreground="#333"/>
                        <TextBox Grid.Column="1" Text="{Binding Passport, UpdateSourceTrigger=PropertyChanged}" Tag="Серия номер"
                                 Padding="8" Height="32" BorderBrush="#DDD" BorderThickness="1"/>
                    </Grid>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="5">
                    <Button Content="Сохранить" Width="80" Height="30" Margin="0,0,10,0"
                            Command="{Binding SaveEditedEmployeeCommand}" Background="#009EE1" Foreground="White" BorderThickness="0" IsEnabled="{Binding CanSaveEmployee}" />
                    <Button Content="Отмена" Width="80" Height="30"
                            Command="{Binding CancelEditCommand}" Background="Gray" Foreground="White" BorderThickness="0"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
