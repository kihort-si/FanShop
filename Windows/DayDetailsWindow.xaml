<Window x:Class="FanShop.Windows.DayDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:FanShop.Windows"
        mc:Ignorable="d"
        Title="Детали дня" Height="300" Width="450">
    <StackPanel Margin="10">
        <TextBlock Text="Сотрудники на этот день:" FontWeight="Bold" Margin="0,0,0,10"/>
        <ListBox ItemsSource="{Binding Employees}"
                 SelectedItem="{Binding SelectedEmployee}"
                 BorderThickness="0">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock>
                        <Run Text="{Binding FirstName}" />
                        <Run Text="{Binding Surname}" />
                    </TextBlock>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Добавить сотрудника" Margin="0,0,10,0" Command="{Binding AddEmployeesCommand}" />
            <Button Content="Удалить сотрудника" Margin="0,0,10,0" Command="{Binding RemoveEmployeesCommand}" />
            <Button Content="Распечатать пропуск" Command="{Binding PrintPassCommand}" />
        </StackPanel>
    </StackPanel>
</Window>
