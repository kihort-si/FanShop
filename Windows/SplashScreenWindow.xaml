<Window x:Class="FanShop.Windows.SplashScreenWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:FanShop.Windows"
        xmlns:viewModels="clr-namespace:FanShop.ViewModels"
        mc:Ignorable="d"
        Title="Загрузка приложения" Height="300" Width="600" WindowStyle="None" WindowStartupLocation="CenterScreen" AllowsTransparency="True">
    <Window.DataContext>
        <viewModels:SplashScreenViewModel/>
    </Window.DataContext>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        
        <Grid Grid.Column="0" Margin="30, 40, 0, 60">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
            </Grid.RowDefinitions>
            
            <StackPanel Grid.Row="0" HorizontalAlignment="Left">
                <Image Source="/Resources/fanshop_logo_blue_and_light_blue.png" Margin="0, 0, 0, 12" Width="260"></Image>
                <TextBlock Text="Версия 1.2.1"
                           FontFamily="OpenSans"
                           FontSize="12"
                           FontWeight="Bold"
                           Foreground="#666666"/>
            </StackPanel>
            <StackPanel Grid.Row="2">
                <TextBlock Text="{Binding LoadingText}"
                           FontFamily="OpenSans"
                           FontSize="12"
                           FontWeight="SemiBold"
                           Foreground="#666666"
                           Margin="0, 0, 0, 8"/>
                <Border Background="#D9D9D9" Height="5" MaxWidth="360">
                    <Rectangle Fill="#003D75" 
                               Width="{Binding ProgressWidth}" 
                               HorizontalAlignment="Left" 
                               Height="5"/>
                </Border>
            </StackPanel>
        </Grid>
        <Image Grid.Column="1" Source="/Resources/zenit_arena.png" Stretch="UniformToFill" Height="248" Margin="0, 14, 0, 0"></Image>
    </Grid>
</Window>
