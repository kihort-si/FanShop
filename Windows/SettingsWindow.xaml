<Window x:Class="FanShop.Windows.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:FanShop.Windows"
        xmlns:viewModels="clr-namespace:FanShop.ViewModels"
        mc:Ignorable="d"
        Title="Настройки" Height="450" Width="400"
        WindowStartupLocation="CenterScreen" WindowStyle="None" ResizeMode="NoResize" >
    <Window.DataContext>
        <viewModels:SettingsWindowViewModel/>
    </Window.DataContext>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Ответственный:" Margin="0,0,0,5"/>
        <TextBox Grid.Row="1" Text="{Binding ResponsiblePerson}" Height="25" Margin="0,0,0,15"/>
        
        <TextBlock Grid.Row="2" Text="Номер телефона:" Margin="0,0,0,5"/>
        <TextBox Grid.Row="3" Text="{Binding ResponsiblePhoneNumber}" Height="25" Margin="0,0,0,15"/>
        
        <TextBlock Grid.Row="4" Text="Должность:" Margin="0,0,0,5"/>
        <TextBox Grid.Row="5" Text="{Binding ResponsiblePosition}" Height="25" Margin="0,0,0,15"/>
        
        <TextBlock Grid.Row="6" Text="Цель визита:" Margin="0,0,0,5"/>
        <TextBox Grid.Row="7" Text="{Binding VisitGoal}" Height="25" Margin="0,0,0,15"/>
        
        <TextBlock Grid.Row="8" Text="Начальник (ООО «Зенит-Трейд»):" Margin="0,0,0,5"/>
        <TextBox Grid.Row="9" Text="{Binding Head}" Height="25" Margin="0,0,0,15"/>

        <TextBlock Grid.Row="10" Text="Заработная плата за день:" Margin="0,0,0,5"/>
        <TextBox Grid.Row="11" Text="{Binding DailySalary}" Height="25" Margin="0,0,0,15"/>

        <StackPanel Grid.Row="12" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Сохранить" Width="80" Height="30" Margin="0,0,10,0"
                    Command="{Binding SaveCommand}" Background="#009EE1" Foreground="White" BorderThickness="0"/>
            <Button Content="Отмена" Width="80" Height="30"
                    Command="{Binding CancelCommand}" Background="Gray" Foreground="White" BorderThickness="0"/>
        </StackPanel>
    </Grid>
</Window>
